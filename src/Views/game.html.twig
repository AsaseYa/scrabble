{% extends 'layout/layout.html.twig' %}

{% block stylesheet %}
    {% include 'components/_css.html.twig' %}
{% endblock %}

{% block navbar %}
    {% include 'components/_navbar.html.twig' %}
{% endblock %}

{% block content %}
    <div id="phpVarWords" style="display: none;">
        {{ wordsGame }}
    </div>
    <div id="phpVarLetters" style="display: none;">
        {{ lettersGame }}
    </div>

    <div class="two-words-container">
        <div class="white-square-total">
            <div class="white-square-total-first">0</div>
            <div class="white-square-total-second"></div>
        </div>
    </div>
    <div class="three-words-container">
        <div class="white-square-total">
            <div class="white-square-total-first">0</div>
            <div class="white-square-total-second"></div>
        </div>
    </div>
    <div class="four-words-container">
        <div class="white-square-total">
            <div class="white-square-total-first">0</div>
            <div class="white-square-total-second"></div>
        </div>
    </div>
    <div class="five-words-container">
        <div class="white-square-total">
            <div class="white-square-total-first">0</div>
            <div class="white-square-total-second"></div>
        </div>
    </div>
    <div class="six-words-container">
        <div class="white-square-total">
            <div class="white-square-total-first">0</div>
            <div class="white-square-total-second"></div>
        </div>
    </div>
    <div class="seven-words-container">
        <div class="white-square-total">
            <div class="white-square-total-first">0</div>
            <div class="white-square-total-second"></div>
        </div>
    </div>

    <form class="word-form" autocomplete="off" action="">
        <label for="wordInput" class="word-label">
            <input id="wordInput" class="word-input" type="text" value="" autofocus>
            <input type="submit" style="display: none;">
        </label>
    </form>

    <div class="lettersContainer">
        <div class="big-tiles-container"></div>
        {# JS import #}
    </div>
{% endblock %}



{% block javascript %}
{% include 'components/_js.html.twig' %}
{% endblock %}